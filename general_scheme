ivw_mod_clientes_info{

    datos de conección: connection.php {
        //datos de conección a la base de datos
    }

    MySql database = ar_ivw_mgmt{

        table: client_info{
               id_client_info: PK AI
               name: varchar
               status: int
        }

        table: code{
               id_client_code: PK
               code: varchar
        }

        table: name{
               id_client_name: PK
               name: varchar
        }

        table: ip{
               id_client_ip: PK
               ip: varchar
        }

        table: address{
               id_client_address: PK
               address: varchar
        }

        table: tel{
               id_client_tel: PK
               tel: varchar
        }

    }

    inicio: index.php{

        busqueda: search.php{
            mostrar
            editar
        }

        agregar: add.php
        eliminar: remove.php
    }

    errores{

        error01: no llega el post o get.
        error02: no se pudo acceder a la base de datos.
        error03: error en el cursor de la base de datos.
        error04: query mal realizada al servidor.
    }
}