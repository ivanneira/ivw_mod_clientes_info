ivw_mod_clientes_info{

    datos de conección: connection.php {
        //datos de conección a la base de datos
    }

    mondgoDB database = clients{
        collection: client{
            //campos obligatorios
            code    //codigo de pago, limite de 9999 clientes
            name    //nombre del titular
            ip      //dirección ip asignada
            address //dirección de la instalacion
            tel     /teléfono de contacto

             //se pueden agregar hasta 100 campos adicionaless
         }
    }

    inicio: index.php{

        busqueda: search.php{
            mostrar
            editar
        }

        agregar: add.php
        eliminar: remove.php
    }

    errores{

        error01: no llega el post o get.
        error02: no se pudo acceder a la base de datos.
        error03: error en el cursor de la base de datos.
        error04: query mal realizada al servidor.
    }
}